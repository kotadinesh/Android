<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/imageTrack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textrName"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/imageTrack"
        android:layout_toEndOf="@+id/imageTrack"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textrArtist"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/textrName" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/star2"
        android:layout_alignTop="@+id/textrName"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Trip_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/Place_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Trip_textview"
            android:layout_below="@+id/Trip_textview"
            android:layout_marginTop="18dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/Place_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Trip_textview"
            android:layout_marginEnd="78dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/AddPlace_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Place_imageview"
            android:layout_marginEnd="16dp"
            app:srcCompat="@android:drawable/btn_dialog" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rel_layout"
        android:layout_marginLeft="50dp">

    </LinearLayout>



</RelativeLayout>